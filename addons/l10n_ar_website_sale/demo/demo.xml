<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <function model="res.users" name="write">
        <value eval="[ref('base.public_user')]"/>
        <value eval="{'company_ids': [(4, ref('l10n_ar.company_ri')), (4, ref('l10n_ar.company_mono')), (4, ref('l10n_ar.company_exento'))]}"/>
    </function>

    <record id="default_website_ri" model="website">
        <field name="name">(AR) Responsable Inscripto Website</field>
        <field name="domain"></field>
        <field name="company_id" ref="l10n_ar.company_ri"/>
        <field name="user_id" ref="base.public_user"/>
        <field name="logo" type="base64" file="l10n_ar_website_sale/static/description/icon.png"/>
        <field name="domain" model="ir.config_parameter" eval="obj().env['ir.config_parameter'].sudo().get_param('web.base.url')"/>
    </record>
    <record id="default_website_mono" model="website">
        <field name="name">(AR) Monotributista Website</field>
        <field name="domain"></field>
        <field name="company_id" ref="l10n_ar.company_mono"/>
        <field name="user_id" ref="base.public_user"/>
        <field name="logo" type="base64" file="l10n_ar_website_sale/static/description/icon.png"/>
    </record>
    <record id="default_website_exento" model="website">
        <field name="name">(AR) Exento Website</field>
        <field name="domain"></field>
        <field name="company_id" ref="l10n_ar.company_exento"/>
        <field name="user_id" ref="base.public_user"/>
        <field name="logo" type="base64" file="l10n_ar_website_sale/static/description/icon.png"/>
    </record>

    <function model="payment.acquirer" name="copy">
        <value eval="[ref('payment.payment_acquirer_transfer')]"/>
        <value eval="{'company_id': ref('l10n_ar.company_ri'),'state': 'enabled'}"/>
    </function>

    <record id="list0" model="product.pricelist">
        <field name="name">AR Public Pricelist</field>
        <field name="selectable" eval="False"/>
        <field name="website_id" ref="l10n_ar_website_sale.default_website_ri"/>
        <field name="sequence">1</field>
        <field name="currency_id" ref="base.ARS"/>
    </record>

    <record id="portal_ri_user" model="res.users">
        <field name="login">portal-ri</field>
        <field name="password">portal</field>
        <field name="currency_id" ref="base.ARS"/>
        <field name="partner_id" ref="l10n_ar.res_partner_adhoc"/>
        <field name="company_ids" eval="[(6, 0, [ref('l10n_ar.company_ri'), ref('l10n_ar.company_mono'), ref('l10n_ar.company_exento')])]"/>
        <field name="company_id" ref="l10n_ar.company_ri"/>
        <field name="groups_id" eval="[(6, 0, [ref('base.group_portal')])]"/>
    </record>

    <record id="portal_cfa_user" model="res.users">
        <field name="login">portal-cfa</field>
        <field name="password">portal</field>
        <field name="partner_id" ref="l10n_ar.par_cfa"/>
        <field name="company_ids" eval="[(6, 0, [ref('l10n_ar.company_ri'), ref('l10n_ar.company_mono'), ref('l10n_ar.company_exento')])]"/>
        <field name="company_id" ref="l10n_ar.company_ri"/>
        <field name="groups_id" eval="[(6, 0, [ref('base.group_portal')])]"/>
    </record>

    <record id="portal_foreign_user" model="res.users">
        <field name="login">portal-foreign</field>
        <field name="password">portal</field>
        <field name="partner_id" ref="l10n_ar.res_partner_expresso"/>
        <field name="company_ids" eval="[(6, 0, [ref('l10n_ar.company_ri'), ref('l10n_ar.company_mono'), ref('l10n_ar.company_exento')])]"/>
        <field name="company_id" ref="l10n_ar.company_ri"/>
        <field name="groups_id" eval="[(6, 0, [ref('base.group_portal')])]"/>
    </record>

    <function model="product.product" name="write">
        <value model="product.product" eval="obj().search([('taxes_id', '=', False)]).ids"/>
        <value model="account.tax" eval="{'taxes_id': (4, obj().search([('type_tax_use', '=', 'sale'), ('tax_group_id', '=', 'VAT 21%')]).id )}"/>
    </function>

</odoo>
