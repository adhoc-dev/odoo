<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_payment_form" model="ir.ui.view">
        <field name="name">account.payment.inherit.view</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <form>
                <field name="l10n_latam_document_sequence_id" invisible="1"/>
                <field name="l10n_latam_use_documents" invisible="1"/>
                <field name="company_id" invisible="1"/>
            </form>
            <field name="payment_date" position="before">

                <!-- only required on posted state for compatibility if you install this module with payments already created -->
                <field name="l10n_latam_receiptbook_id" attrs="{'invisible': ['|', ('l10n_latam_use_documents', '=', False), ('payment_type', '=', 'transfer')], 'required':[('payment_type', '!=', 'transfer'), ('l10n_latam_use_documents', '!=', False), ('state', '=', 'draft')]}" domain="[('partner_type', '=', partner_type), ('company_id', '=', company_id)]"/>
                <field name="l10n_latam_document_number" attrs="{'invisible': ['|', ('payment_type', '=', 'transfer'), '|', ('l10n_latam_document_sequence_id', '!=', False), ('l10n_latam_use_documents', '=', False)], 'required': [('payment_type', '!=', 'transfer'), ('l10n_latam_document_sequence_id', '=', False), ('l10n_latam_use_documents', '!=', False)]}"/>
            </field>

            <div class="oe_title" position="attributes">
                <attribute name="attrs"></attribute>
            </div>
            <field name="name" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <field name="name" position="before">
                <field name="display_name" attrs="{'invisible': [('display_name', '=', False)]}" class="oe_inline"/>
                <span attrs="{'invisible': [('l10n_latam_next_number', 'in', (0, False))]}" class="oe_inline">- Next Number: </span>
                <field name="l10n_latam_next_number" attrs="{'invisible': [('l10n_latam_next_number', 'in', (0, False))]}" class="oe_inline"/>
            </field>
        </field>
    </record>

    <record id="view_account_payment_search" model="ir.ui.view">
        <field name="name">account.payment.search</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search"/>
        <field name="arch" type="xml">
            <field name="name" position="attributes">
                <!-- in this case display_name has the or logic -->
                <attribute name="filter_domain">['|', ('display_name','ilike',self), ('communication','ilike',self)]</attribute>
            </field>

            <field name="company_id">
                <field name="l10n_latam_receiptbook_id"/>
            </field>

            <search>
                <filter string="Receiptbook" name="l10n_latam_receiptbook" context="{'group_by':'l10n_latam_receiptbook_id'}"/>
            </search>
        </field>
    </record>

    <record id="view_account_payment_tree" model="ir.ui.view">
        <field name="name">account.payment.tree</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="display_name"/>
            </field>
            <field name="name" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

</odoo>
