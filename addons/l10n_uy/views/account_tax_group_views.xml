<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_tax_group_form" model="ir.ui.view">
        <field name="name">account.tax.group.inherit.view.form</field>
        <field name="model">account.tax.group</field>
        <field name="inherit_id" ref="account.view_tax_group_form"/>
        <field name="arch" type="xml">
            <field name="country_id" position="after">
                <field name="country_code" invisible="1"/>
                <field name="l10n_uy_tax_category" invisible="country_code != 'UY'"/>
            </field>
        </field>
    </record>

</odoo>
