<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="custom_header">
        <div class="header" style="font-size: 14px; color: #555555;">
            <div id="sector-a">
                <t t-set="pre_printed_invoice" t-value="o.journal_id.l10n_ar_afip_pos_system == 'II_IM'"/>
                <div class="row" t-if="not pre_printed_invoice">
                    <div name="left-upper-side" class="col-5">
                        <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 45px;" alt="Logo"/>
                    </div>
                    <div name="center-upper" class="col-2 text-center">
                        <span style="display: inline-block; text-align: center; line-height: 8px;">
                            <h1 style="line-height: 25px;">
                                <strong><span t-field="o.l10n_latam_document_type_id.l10n_ar_letter"/></strong>
                            </h1>
                            <span style="font-size: x-small;">Code N <t t-esc=" '%02d' % int(o.l10n_latam_document_type_id.code) if o.l10n_latam_document_type_id.code else ''"/></span>
                        </span>
                    </div>
                    <div name="rigth-upper-side" class="col-5 text-right">

                        <!-- (6) Titulo de Documento -->
                        <h4><strong>
                            <span t-field="o.l10n_latam_document_type_id.report_name"/>
                        </strong></h4>

                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <t t-if="not pre_printed_invoice">
                            <!-- (1) Nombre de Fantasia -->
                            <!-- (2) Apellido y Nombre o Razon Social -->
                            <span t-field="o.company_id.partner_id.name"/>
                            <t t-set="journal_address" t-value="o.journal_id.l10n_ar_afip_pos_partner_id"/>

                            <!-- (3) Domicilio Comercial: -->
                            <!-- (4) Domicilio Fiscal -->
                            <br/>
                            <t t-esc="' - '.join([item for item in [
                                ', '.join([item for item in [journal_address.street, journal_address.street2] if item]),
                                journal_address.city,
                                journal_address.state_id and journal_address.state_id.name,
                                journal_address.zip,
                                journal_address.country_id and journal_address.country_id.name,
                                journal_address.phone and 'Tel: ' + journal_address.phone] if item])"/>
                            <br/>
                            <t t-esc="' - '.join([item for item in [journal_address.website, journal_address.email] if item])"/>
                        </t>
                    </div>
                    <div class="col-6 text-right">

                        <t t-if="not pre_printed_invoice">
                            <!-- (7) Numero punto venta - (8) numero de documento -->
                            <span>Nro: </span><span t-field="o.l10n_latam_document_number"/>
                            <br/>
                        </t>

                        <!-- (9) Fecha -->
                        <span>Date: </span><span t-field="o.invoice_date"/>

                        <t t-if="not pre_printed_invoice">
                            <!-- (5) Condicion de IVA / Responsabilidad -->
                            <!-- (10) CUIT -->
                            <br/>
                            <span t-field="o.company_id.l10n_ar_afip_responsibility_type_id"/> - CUIT: <span t-field="o.company_id.vat"/>

                            <!-- (11) IIBB: -->
                            <!-- (12) Inicio de actividades -->
                            <br/>Gross Income: <span t-esc="o.company_id.l10n_ar_gross_income_type == 'exempt' and 'Exento' or o.company_id.l10n_ar_gross_income_number"/> - Start of activities: <span t-field="o.company_id.l10n_ar_afip_start_date"/>
                        </t>

                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="l10n_ar_report_invoice_document">

        <t t-call="l10n_ar.custom_header"/>

        <!-- <t t-call="web.html_container"> -->
        <t t-call="web.external_layout">

            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <!-- <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"> -->
                <div class="page">
                    <div id="informations">
                        <div id="sector-b" class="row">

                            <div class="col-6">

                                <!-- IDENTIFICACION (ADQUIRIENTE-LOCATARIO-PRESTARIO) -->

                                <!-- (14) Apellido uy Nombre: Denominicacion o Razon Soclial -->
                                <strong>Customer: </strong><span t-field="o.partner_id.name"/>

                                <!-- (15) Domicilio Comercial -->
                                <br/>
                                <span t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: true, &quot;no_tag_br&quot;: True}"/>

                                <!-- (16) Responsabilidad AFIP -->
                                <strong>VAT Cond: </strong><span t-field="o.partner_id.l10n_ar_afip_responsibility_type_id"/>

                                <!-- (17) CUIT -->
                                <t t-if="o.partner_id.vat and o.partner_id.l10n_latam_identification_type_id.name and o.partner_id.l10n_latam_identification_type_id.name != 'Sigd'">
                                    <br/><strong><t t-esc="o.partner_id.l10n_latam_identification_type_id.name or o.company_id.country_id.vat_label" id="inv_tax_id_label"/>:</strong> <span t-field="o.partner_id.vat"/>
                                </t>

                            </div>
                            <div class="col-6">

                                <t t-if="o.invoice_date_due">
                                    <strong>Due Date: </strong>
                                    <span t-field="o.invoice_date_due"/>
                                </t>

                                <t t-if="o.invoice_payment_term_id" name="payment_term">
                                    <br/><strong>Payment Term: </strong><span t-field="o.invoice_payment_term_id.name"/>
                                </t>

                                <t t-if="o.invoice_origin">
                                    <br/><strong>Source:</strong>
                                    <span t-field="o.invoice_origin"/>
                                </t>
                                <t t-if="o.ref">
                                    <br/><strong>Reference:</strong>
                                    <span t-field="o.ref"/>
                                </t>

                                <!-- (18) REMITOS -->
                                <!-- We do not have remitos implement yet. print here the remito number when we have it -->

                                <t t-if="o.invoice_incoterm_id">
                                    <br/><strong>Incoterm:</strong><span t-field="o.invoice_incoterm_id.name"/>
                                </t>

                            </div>

                        </div>
                        <div id="sector-c">
                            <!-- Tabla de productos, cantidad, descripcion, precio unitario, alicuota, % base, precio neto  -->

                            <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>
                            <table class="table table-sm o_main_table mt16 mb16" name="invoice_line_table">
                                <thead>
                                    <tr>
                                        <!-- TODO: remove in master -->
                                        <t t-set="colspan" t-value="6"/>
                                        <th name="th_description" class="text-left"><span>Description</span></th>
                                        <th name="th_source" class="d-none text-left"><span>Source Document</span></th>
                                        <th name="th_quantity" class="text-right"><span>Quantity</span></th>
                                        <th name="th_priceunit" t-attf-class="text-right {{ 'd-md-table-cell' if report_type == 'html' else '' }}"><span>Unit Price</span></th>
                                        <th name="th_price_unit" t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span>Disc.%</span>
                                            <!-- TODO: remove in master -->
                                            <t t-set="colspan" t-value="colspan+1"/>
                                        </th>
                                        <th t-if="o.amount_by_group" name="th_taxes" t-attf-class="text-left {{ 'd-md-table-cell' if report_type == 'html' else '' }}"><span>% VAT</span></th>
                                        <th name="th_subtotal" class="text-right">
                                            <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                            <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <t t-set="current_subtotal" t-value="0"/>
                                    <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                                    <t t-foreach="lines" t-as="line">
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.l10n_latam_price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                                <td name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                                <td class="text-right">
                                                    <span t-field="line.quantity"/>
                                                    <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                                </td>
                                                <td t-attf-class="text-right {{ 'd-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span t-field="line.l10n_latam_price_unit"/>
                                                </td>
                                                <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span t-field="line.discount"/>
                                                </td>
                                                <td t-if="o.amount_by_group" t-attf-class="text-left {{ 'd-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.l10n_latam_tax_ids.filtered(lambda x: x.tax_group_id.l10n_ar_vat_afip_code)))" id="line_tax_ids"/>
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <span t-field="line.l10n_latam_price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                                    <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                                </td>
                                            </t>
                                            <t t-if="line.display_type == 'line_section'">
                                                <td colspan="99">
                                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                </td>
                                                <t t-set="current_section" t-value="line"/>
                                                <t t-set="current_subtotal" t-value="0"/>
                                            </t>
                                            <t t-if="line.display_type == 'line_note'">
                                                <td colspan="99">
                                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                </td>
                                            </t>
                                        </tr>

                                        <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                            <tr class="is-subtotal text-right">
                                                <td colspan="99">
                                                    <strong class="mr16">Subtotal</strong>
                                                <span
                                                    t-esc="current_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                />
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>
                            <div class="clearfix">
                                <div id="total" class="row">

                                    <div t-attf-class="#{'col-7' if report_type != 'html' else 'col-sm-5 col-md-7'}">

                                        <t t-if="o.l10n_ar_afip_concept in ['2', '3', '4'] and o.l10n_ar_afip_service_start and o.l10n_ar_afip_service_end">
                                            <strong>Invoiced period from: </strong><span t-field="o.l10n_ar_afip_service_start"/> to: <span t-field="o.l10n_ar_afip_service_end"/>
                                        </t>
                                        <t t-if="o.currency_id != o.company_id.currency_id">
                                            <br/><strong>Currency: </strong><span t-esc="'%s - %s' % (o.currency_id.name, o.currency_id.currency_unit_label)"/>
                                            <br/><strong>Exchange rate: </strong> <span t-field="o.l10n_ar_currency_rate"/>
                                        </t>
                                        <t t-if="o.l10n_latam_document_type_id.code in ['201', '206', '211']">
                                            <br/><strong>CBU for payment: </strong><span t-esc="o.invoice_partner_bank_id.acc_number or '' if o.invoice_partner_bank_id.acc_type == 'cbu' else ''"/>
                                        </t>

                                    </div>
                                    <div t-attf-class="#{'col-5' if report_type != 'html' else 'col-sm-7 col-md-5'}">
                                        <table class="table table-sm page-break-inside: avoid;">
                                            <tr t-if="o.amount_by_group" class="border-black o_subtotal">
                                                <!-- (20) Subtotal -->
                                                <td><strong>Subtotal</strong></td>
                                                <td class="text-right">
                                                    <span t-field="o.l10n_latam_amount_untaxed"/>
                                                </td>
                                            </tr>
                                            <!--
                                                (21) Alicuota IVA (22) IVA
                                                (23) IVA No Inscripto
                                                (24) Percepcioes Otros
                                                (25) Conceptos No gravados
                                            -->
                                            <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                                <tr>
                                                    <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) == 1 and o.l10n_latam_amount_untaxed == amount_by_group[2]">
                                                        <td><span t-esc="amount_by_group[0]"/></td>
                                                        <td class="text-right o_price_total">
                                                            <span t-esc="amount_by_group[3]"/>
                                                        </td>
                                                    </t>
                                                    <t t-else="">
                                                        <td>
                                                            <span t-esc="amount_by_group[0]"/>
                                                            <span>&amp;nbsp;<span>on</span>
                                                                <t t-esc="amount_by_group[4]"/>
                                                            </span>
                                                        </td>
                                                        <td class="text-right o_price_total">
                                                            <span t-esc="amount_by_group[3]"/>
                                                        </td>
                                                    </t>
                                                </tr>
                                            </t>
                                            <tr class="border-black o_total">
                                                <!-- (26) Total -->
                                                <td><strong>Total</strong></td>
                                                <td class="text-right">
                                                    <span t-field="o.amount_total"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div id="sector-d" style="margin-bottom: 20px;">
                            <div class="row">
                                <div class="col-12">

                                    <t t-if="o.fiscal_position_id.note" name="note">
                                        <span t-field="o.fiscal_position_id.note"/><br/>
                                    </t>
                                    <t t-if="o.narration" name="comment">
                                        <strong>OBSERVATIONS:</strong><br/>
                                        <span t-field="o.narration"/>
                                    </t>

                                </div>
                            </div>

                            <!-- (31) Firma y Alacarion del vendedor,
                                (29) Nro Controlador Fiscal
                                (30) Logotipo Fiscal -->
                        </div>
                   </div>
                </div>
            <!-- </div> -->
        </t>
    </template>

    <template id="report_invoice_document_with_payments" inherit_id="l10n_ar.l10n_ar_report_invoice_document" primary="True">
        <xpath expr="//div[@id='total']/div/table" position="inside">
            <t t-set="payments_vals" t-value="o._get_reconciled_info_JSON_values()"/>
            <t t-foreach="payments_vals" t-as="payment_vals">
                <tr>
                    <td>
                        <i class="oe_form_field text-right oe_payment_label">Paid on <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/></i>
                    </td>
                    <td class="text-right">
                        <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </td>
                </tr>
            </t>
            <t t-if="len(payments_vals) > 0">
                <tr class="border-black">
                    <td><strong>Amount Due</strong></td>
                    <td class="text-right">
                            <span t-field="o.amount_residual"/>
                    </td>
                </tr>
            </t>
        </xpath>
    </template>

</odoo>
