<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_partner_form">
        <field name="name">res.partner.form.inherit</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <group name="electronic_invoicing" position="after">
                <group string="Argentinean Taxes" invisible="'AR' not in fiscal_country_codes">
                    <field name="l10n_ar_tax_ids" nolabel="1" colspan="2" widget="auto_save_res_partner">
                        <tree editable="top">
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True, 'no_open': True}" optional="hide"/>
                            <field name="tax_id" options="{'no_create': True, 'no_open': True}" domain="[('l10n_ar_withholding_payment_type', '!=', False)]"/>
                            <field name="from_date" optional="hide"/>
                            <field name="to_date" optional="hide"/>
                            <field name="ref" optional="hide"/>
                        </tree>
                    </field>
                </group>
            </group>
        </field>
    </record>

</odoo>
