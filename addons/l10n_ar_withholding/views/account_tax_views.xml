<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tax_form" model="ir.ui.view">
        <field name="name">account.tax.form</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">
            <field name="type_tax_use" position="after">
                <field name="l10n_ar_withholding_payment_type" invisible="type_tax_use != 'none' or country_code != 'AR'" string="Withholding Type"/>
                <field name="l10n_ar_tax_type" invisible="not l10n_ar_withholding_payment_type" required="l10n_ar_withholding_payment_type" string="Tax Type"/>
                <field name="l10n_ar_state_id" invisible="l10n_ar_tax_type != 'iibb_withholding'" required="l10n_ar_tax_type == 'iibb_withholding'" string="Tax Type"/>
                <field name="l10n_ar_withholding_non_taxable_amount" invisible="not l10n_ar_withholding_payment_type" string="Non-taxable Amount"/>
                <field name="l10n_ar_withholding_sequence_id" context="{'default_name': name}" invisible="l10n_ar_withholding_payment_type != 'supplier'" string="Sequence"/>
            </field>
        </field>
    </record>
</odoo>
