<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form" model="ir.ui.view">
        <field name="name">res.company.form.inherit</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="model">res.company</field>
        <field name="arch" type="xml">
            <form>
                <field name="l10n_ar_country_code" invisible="1"/>
            </form>
            <field name="vat" position="attributes">
                <attribute name="attrs">{'invisible': [('l10n_ar_country_code', '=', 'AR')]}</attribute>
            </field>
            <field name="vat" position="before">
                <label for="l10n_ar_id_number" string="Identification" attrs="{'invisible': [('l10n_ar_country_code', '!=', 'AR')]}"/>
                <div class="oe_row" attrs="{'invisible': [('l10n_ar_country_code', '!=', 'AR')]}">
                    <field name="l10n_ar_identification_type_id" options="{'no_open': True, 'no_create': True}" placeholder="Type" style="width: 45%"/>
                    <field name="l10n_ar_id_number" placeholder="Number" style="width: 53%"/>
                </div>
            </field>
        </field>
    </record>
</odoo>
