<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="public_user_ar" model="res.users">
        <field name="name">(AR) Public User</field>
        <field name="login">public-ar</field>
        <field name="password">public</field>
        <field name="company_ids" eval="[(6, 0, [ref('l10n_ar.company_ri')])]"/>
        <field name="company_id" ref="l10n_ar.company_ri"/>
        <field name="groups_id" eval="[(6, 0, [ref('base.group_public')])]"/>
    </record>

    <record id="portal_ri_user" model="res.users">
        <field name="login">responsable</field>
        <field name="password">responsable</field>
        <field name="currency_id" ref="base.ARS"/>
        <field name="partner_id" ref="l10n_ar.res_partner_adhoc"/>
        <field name="company_ids" eval="[(6, 0, [ref('l10n_ar.company_ri'), ref('l10n_ar.company_mono'), ref('l10n_ar.company_exento')])]"/>
        <field name="company_id" ref="l10n_ar.company_ri"/>
        <field name="groups_id" eval="[(6, 0, [ref('base.group_portal')])]"/>
    </record>

    <record id="portal_cf_user" model="res.users">
        <field name="name">Consumidor Final</field>
        <field name="login">consumidor</field>
        <field name="password">consumidor</field>
        <field name="company_ids" eval="[(6, 0, [ref('l10n_ar.company_ri')])]"/>
        <field name="company_id" ref="l10n_ar.company_ri"/>
        <field name="groups_id" eval="[(6, 0, [ref('base.group_portal')])]"/>
    </record>

    <record id="portal_foreign_user" model="res.users">
        <field name="login">extranjero</field>
        <field name="password">extranjero</field>
        <field name="partner_id" ref="l10n_ar.res_partner_expresso"/>
        <field name="company_ids" eval="[(6, 0, [ref('l10n_ar.company_ri')])]"/>
        <field name="company_id" ref="l10n_ar.company_ri"/>
        <field name="groups_id" eval="[(6, 0, [ref('base.group_portal')])]"/>
    </record>

    <record id="portal_wo_resp_user" model="res.users">
        <field name="name">Sin Resposabilidad</field>
        <field name="login">sin-resposabilidad</field>
        <field name="password">sin-resposabilidad</field>
        <field name="company_ids" eval="[(6, 0, [ref('l10n_ar.company_ri')])]"/>
        <field name="company_id" ref="l10n_ar.company_ri"/>
        <field name="groups_id" eval="[(6, 0, [ref('base.group_portal')])]"/>
    </record>

</odoo>
