
    <template id="address" name="Address Management" inherit_id="website_sale.address">

        <xpath expr="//input[@name='field_required']" position="before">
            <t t-if="mode[1] == 'billing'">
                <t t-set="l10n_latam_identification_type_id" t-value="'l10n_latam_identification_type_id' in checkout and checkout['l10n_latam_identification_type_id']"/>
                <t t-call="l10n_latam_website_sale.partner_info"/>
            </t>
        </xpath>

    </template>

