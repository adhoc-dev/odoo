<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice_document" inherit_id="l10n_latam_document.report_invoice_document">
        <div t-if="o.partner_id.vat" position="after">
            <span>VAT Cond.: </span><span t-field="o.l10n_ar_afip_responsibility_type_id"/>
            <t t-if="o.invoice_incoterm_id">
                <br/><span>Incoterm: </span><span t-field="o.invoice_incoterm_id.name"/>
            </t>
        </div>
        <span t-field="o.l10n_latam_document_type_id.report_name" position="before">
            <span style="border: solid; padding: 10px; display: inline-block; text-align: center; line-height: 8px;">
                <h3 style="line-height: 15px;">
                    <strong><span t-field="o.l10n_latam_document_type_id.l10n_ar_letter"/></strong>
                </h3>
                <span style="font-size: x-small;">Cod <t t-esc="o.l10n_latam_document_type_id.code"/></span>
            </span>
        </span>
    </template>

    <template id="argentinian_extra_info">
        <li t-if="company.l10n_ar_afip_responsibility_type_id" class="list-inline-item">VAT Cond.: <span t-field="company.l10n_ar_afip_responsibility_type_id"/></li>
        <li class="list-inline-item">Gross Income: <span t-esc="company.l10n_ar_gross_income_type == 'no_liquida' and 'Exento' or company.l10n_ar_gross_income_number"/></li>
        <li t-if="company.l10n_ar_afip_start_date" class="list-inline-item">Activities Start Date: <span t-field="company.l10n_ar_afip_start_date"/></li>
    </template>

    <template id="external_layout_standard" inherit_id="web.external_layout_standard">
        <!-- footer -->
        <ul class="list-inline mb4" position="inside">
            <t t-call="l10n_ar.argentinian_extra_info"/>
        </ul>
    </template>

    <template id="external_layout_background" inherit_id="web.external_layout_background">
        <!-- footer -->
        <ul class="list-inline" position="inside">
            <t t-call="l10n_ar.argentinian_extra_info"/>
        </ul>
    </template>

    <template id="external_layout_boxed" inherit_id="web.external_layout_boxed">
        <!-- footer -->
        <ul class="list-inline" position="inside">
            <t t-call="l10n_ar.argentinian_extra_info"/>
        </ul>
    </template>

    <template id="external_layout_clean" inherit_id="web.external_layout_clean">
        <!-- header -->
        <ul class="list-unstyled" position="inside">
            <t t-call="l10n_ar.argentinian_extra_info"/>
        </ul>
    </template>

</odoo>
